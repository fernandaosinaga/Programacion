#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "stdlib.h"
#include "math.h"
#define MAX 1000

using namespace std;

void cargar (double a[], int tamano);
void mostrar (double a[], int tamano);
double cercano (double a[], int n, double x);
void fibonacci (int n);
void menu();
double opcion1 (double x, double y);
int opcion2 (int x, int y);
double opcion3 (double x);

void main ()
{
	int option, n;
	double v[MAX],x,Cercano;
	do{
		cout<<"\t\t MENU \n\n";
		cout<<"1. Encontrar el mayor cercano\n\n";
		cout<<"2. Problemas matematicos \n\n";
		cout<<"3. Fibonacci\n\n";
		cout<<"O. Salir del programa\n\n";
		cout<<"Opcion: ";
		cin>>option;
		switch(option){
		case 1:
			cout<<"Introduzca el numero de elementos a comparar: ";
			cin>>n; 
			cargar (v, n);
			cout<<"Introduzca que elemento comparar: ";
			cin>> x;
			Cercano=cercano (v, n, x);
			cout<<"El mayor cercano es: "<<Cercano;
			break;
		case 2:
			menu();
			break;
		case 3:
			cout<<"Ingrese hasta que numero quiere que aparezca su FIBONACCI: ";
			cin>>n;
			fibonacci(n);
			break;
		case 0:
			cout<<"Saliendo del programa";
			break;
		default: 
			cout<<"ERROR de opcion";
			break;
		}
		getch();
		system("cls");
	}while(option!=0);
	getch();
}

void cargar (double a[], int tamano){
	for(int i=0; i<tamano; i++){
		cout<<"a["<<i<<"] ";
		cin>>a[i];
	}
}
void mostrar (double a[], int tamano){
	for(int i=0; i<tamano; i++)
		cout<<"a["<<i<<"] "<<a[i]<<endl;
}
double cercano(double a[], int n, double x){
	double b[MAX];
	int c=0;
	
	for(int i=0; i<n;i++){
		if(a[i]>x){
			b[c]=a[i];
			c++;
		}
	}
	int aux=b[0];
	for (int i=0;i<c;i++)
		if(b[i]<aux)
			aux=b[i];
	return aux;
}
void fibonacci(int n){
	double a[MAX], c=0;
	a[0]=0;
	a[1]=1;
	for(int i=2; i<MAX;i++)
		if(a[i]<n)
			c++;
	cout<<"Su serie hasta "<<n<<" es: \n";
	mostrar (a,c);
}
void menu(){
	int opcion;
	double x, y,Resultado;
	do{
		cout<<"\t\t MENU \n\n";
		cout<<"1. Encontrar raiz cuadrada de x*x + y*y \n\n";
		cout<<"2. Encontrar modulo entre x % y\n\n";
		cout<<"3. Hallar seno de angulo en radianes\n\n";
		cout<<"O. Volver al programa\n\n";
		cout<<"Opcion: ";
		cin>>opcion;
		switch(opcion){
			case 1:
				cout<<"Ingrese el valor de x: ";
				cin>>x;
				cout<<"Ingrese el valor de y: ";
				cin>>y;
				Resultado=opcion1(x,y);
				cout<<"El resultado es: "<<Resultado;
				break;
			case 2:
				cout<<"Ingrese el valor de x: ";
				cin>>x;
				cout<<"Ingrese el valor de y: ";
				cin>>y;
				Resultado=opcion2(x,y);
				cout<<"El resultado es: "<<Resultado;
				break;
			case 3:
				cout<<"Ingrese el valor del angulo en radianes: ";
				cin>>x;
				Resultado=opcion3(x);
				cout<<"El resultado es: "<<Resultado;
				break;
			case 0:
				cout<<"Volviendo al menu anterior";
				break;
			default:
				cout<<"ERROR de opcion";
				break;
				}
			getch();
			system("cls");
		}while(opcion!=0);
	getch();
}
double opcion1 (double x, double y){
	return sqrt(pow(x,2)+pow(y,3));
}
int opcion2 (int x, int y){
	return x%y;
}
double opcion3 (double x){
	return sin(x/6.2432);
}
